<!DOCTYPE html>
<html>
  <head>
    <title>Edit Menu Items</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </head>
  <div class="container">
      <div class="row">
        <div class="col-sm-9">
            <h1>Edit Menu Items</h1>
        </div>
      </div>
      <% menuItems.forEach(function(menuItem) { %>
      <div class="row">
          <div class="col-sm-3">
              <img width="150px" height="150px" src="data:<%=menuItem.image.contentType%>;base64,<%=menuItem.image.data.toString('base64')%>" />
          </div>
          <div class="col-sm-9">
            <div class="float-left">
              <div class="row">Name: <%=menuItem.name%></div>
              <div class="row">Description: <%=menuItem.description%></div>
              <div class="row">Price: <%=menuItem.price%></div>
              <div class="row"><%=menuItem.inStock?"In stock":"Out of stock"%></div> 
            </div>
          </div>
      </div>
      <% }) %>
  </div>
  <script src="/javascripts/global.js"></script>
</html>