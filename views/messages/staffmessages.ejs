    <title>Staff Messages</title>
  </head>

  <body>

    <%- include('partials/topbar', {page: "StaffMessages" });%>
    <h3>Send a Message:</h3>

        <form action=staffmessages method="POST">
            <input name="message"><br>
            <input name="action" type="submit" value="Send">
        </form>

    <% messages.forEach(function(message) { %>
            <%= message.message %>
    <% }); %>

    </body>
    <script src="/javascripts/global.js"></script>
