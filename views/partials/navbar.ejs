<!-- Nav Bar -->

<nav class="navbar navbar-expand-md navbar-light navbar-custom">
  <img class="navbar-brand" src="/images/burger.png" width="50" height="50" alt=""
    style="background: none; background-color: transparent;">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsingNavbarLg"
    style="margin-left:auto; order:2;">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="navbar-collapse collapse justify-content-center" id="collapsingNavbarLg">
    <ul class="navbar-nav ">
      <a href="/" <% if(active=='Home' ){ %>
        class="nav-item nav-link nav-button disabled"
        <% } else{ %>
          class="nav-item nav-link nav-button"
          <% } %>
            >Home
      </a>
      <!-- If logged in show Order -->
      <%if(currentUser) { %>
        <a href="/order" 
        <% if(active=='Order' ){ %>
            class="nav-item nav-link nav-button disabled"
          <% } else{ %>
            class="nav-item nav-link nav-button"
          <% } %> >
        Order
        </a>        
      <% } 
      <!-- Otherwise show Menu -->
      else{ %>
        <a href="/order" 
        <% if(active=='Order' ){ %>
          class="nav-item nav-link nav-button disabled"
        <% } else{ %>
          class="nav-item nav-link nav-button"
        <% } %> >
        Menu
        </a>
      <% } %>
      <!-- If logged in show Cart -->
      <%if(currentUser) { %>
        <a href="/users/cart" 
        <% if(active=='Cart' ){ %>
          class="nav-item nav-link nav-button disabled"
        <% } else{ %>
          class="nav-item nav-link nav-button"
        <% } %> >
        Cart
        </a>
      <% } %>
      <!-- If Staff or Admin show Staff Actions -->
      <%if(currentUser && currentUser.role=='staff' || currentUser && currentUser.role=='admin' ) { %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle nav-item nav-button" href="#" id="navbarDropdown" role="button"
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Staff Actions
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <div class="dropdown-content">
              <a href="/staff/orderlist" style="min-width: 100px" <% if(active=='orderlist' ){ %>
                class="nav-item nav-link nav-button disabled"
                <% } else{ %>
                  class="nav-item nav-link nav-button"
                  <% } %>
                  >
              Order List
              </a>
            <!-- If admin show Edit Menu -->
            <%if(currentUser.role=='admin' ) { %>
              <a href="/menu/editmenu" style="min-width: 100px"
              <% if(active=='EditMenu' ){ %>
                class="nav-item nav-link nav-button disabled"
              <% } 
              else{ %>
                class="nav-item nav-link nav-button"
              <% } %> >
              Edit Menu
              </a>
              
            <% } %>
              <!-- If admin show User List -->
              <%if(currentUser.role=='admin' ) { %>
                <a href="/users/viewusers" style="min-width: 100px"
                <% if(active=='ViewUsers' ){ %>
                    class="nav-item nav-link nav-button disabled"
                <% } 
                else{ %>
                  class="nav-item nav-link nav-button"
                <% } %>> 
                User List
                </a>
                <% } %>

              <!-- If admin show Usage Report -->
              <%if(currentUser.role=='admin' ) { %>
                <a href="/staff/usagereport" style="min-width: 130px"
                <% if(active=='usagereport' ){ %>
                  class="nav-item nav-link nav-button disabled"
                <% } else{ %>
                  class="nav-item nav-link nav-button"
                <% } %> >
                Usage Report
                </a>
              <% } %> 
            </div>
        </li>
      <% } %>
    </ul>
  </div>
</nav>
