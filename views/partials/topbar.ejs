<!--whole top bar-->
<div class="topbar">

  <!-- Webpage Title -->
  <div class="row mr-0">
    <h1 class="text-center logo">Badger Bytes</h1>
  </div>
  <div class="login-button">
    <div class="text-center">
      <!-- Button HTML (to Trigger Modal) -->
      <a href="#myModal" data-toggle="modal">
        <button class="rounded-circle account-button-bkg" style="width:50px; height:50px;">
          <svg class="bi bi-person-fill account-button" width="100%" height="100%" viewBox="0 3 16 16"
            fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
          </svg>
        </button>
      </a>
      <!-- -->
    </div>
    <% if (!currentUser) { %>
      <!-- Modal HTML -->
      <div id="myModal" class="modal fade">
        <div class="modal-dialog modal-login">
          <div class="modal-content pop-up">
            <div class="modal-header" style="border-bottom:none; padding-bottom:0px">
              <h4 class="header3" style="margin-bottom:0">Member Login</h4>
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
              <form action="/users/login" method="POST">
                <div class="form-group">
                  <input class="form-control pop-up-field" name="username" placeholder="Username">
                </div>
                <div class="form-group">
                  <input type="password" class="form-control pop-up-field" name="password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary logout-button">Log in</button>
              </form>
              <div>
                <a href="/users/createuser"><button class="btn btn-primary signup-button text-center">Sign
                    up</button></a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% } else { %>
        <!-- Modal HTML -->
        <div id="myModal" class="modal fade">
          <div class="modal-dialog modal-login">
            <div class="modal-content pop-up">
              <div class="modal-header" style="border-bottom:none; padding-bottom:0px">
                <h1 class="header3 text-center">Hello <%= currentUser.username %>!</h1>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              </div>
              <div class="modal-body">
                <form action="/" method="POST">
                  <div>
                    <%if(currentUser) { %>
                      <a href="/users/customerAccount" class="btn btn-primary signup-button text-centern">Account</a>
                      <% } %>
                      <a style="color:white"
                      href="/users/orders"><button type="button" class="btn btn-primary signup-button text-center">Orders</button></a>
                      <a href="/messages/messages" class="btn btn-primary signup-button text-centern">Messages</a>
                        <input name="action" type="submit" class="btn btn-primary logout-button text-center"
                          value="Logout" />
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <% } %>
  </div>
  <!-- Navbar -->
  <%- include('partials/navbar', {active: page});%>
</div>